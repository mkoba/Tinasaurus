<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/box"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivIconID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/food" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivIconID"
            android:paddingBottom="20dp"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:text="Name: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/WHITE"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Event Location"
            android:textColor="@color/WHITE"
            android:textColorHint="#FFFFFF"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Event description"
            android:textColor="@color/WHITE"
            android:textColorHint="#FFFFFF"
            android:textSize="20dp" />

        <View
            android:id="@+id/views"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:paddingRight="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/select_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="Select Categories"
                android:textColor="@color/yellow2"
                android:textSize="20dp" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginLeft="20dp"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:paddingBottom="10dp" >

                    <CheckBox
                        android:id="@+id/career_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Career"
                        android:textColor="@color/WHITE"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/food_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food"
                        android:textColor="@color/WHITE"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/organization_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organization"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE" />

                    <CheckBox
                        android:id="@+id/other_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:textColor="@color/WHITE"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/social_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Social"
                        android:textColor="@color/WHITE"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/sport_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sport"
                        android:textColor="@color/WHITE"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/study_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Study"
                        android:textColor="@color/WHITE"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/views2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:paddingRight="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingTop="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/select_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:text="Select Time: "
                    android:textColor="@color/yellow2"
                    android:textSize="20dp" >
                </TextView>

                <TimePicker
                    android:id="@+id/eventTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:textColor="@color/WHITE" />
            </LinearLayout>

            <View
                android:id="@+id/views3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:paddingRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/select_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingTop="20dp"
                    android:text="Select Date: "
                    android:textColor="@color/yellow2"
                    android:textSize="20dp" >
                </TextView>

                <DatePicker
                    android:id="@+id/datePicker1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:textColor="@color/WHITE" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/Done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/darkbar"
            android:text="Update Event"
            android:textColor="@color/WHITE"
            android:textSize="20dp" />
    </LinearLayout>

</ScrollView>